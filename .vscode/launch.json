{
    "version": "0.2.0",
    "configurations": [
		{
			"name": "validate_arguments",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/tests/bin/validate_arguments",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
		}
    ]
}
